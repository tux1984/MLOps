{
  "dashboard": {
    "title": "API Diabetes - Métricas",
    "panels": [
      {
        "id": 1,
        "title": "Total de Requests",
        "targets": [
          {
            "expr": "sum(api_requests_total)"
          }
        ],
        "type": "stat"
      },
      {
        "id": 2,
        "title": "Predicciones por Modelo",
        "targets": [
          {
            "expr": "sum by (model_version) (predictions_total)"
          }
        ],
        "type": "graph"
      },
      {
        "id": 3,
        "title": "Latencia de Requests",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(api_request_duration_seconds_bucket[5m])) by (le, endpoint))"
          }
        ],
        "type": "graph"
      },
      {
        "id": 4,
        "title": "Errores de Predicción",
        "targets": [
          {
            "expr": "sum(prediction_errors_total)"
          }
        ],
        "type": "stat"
      }
    ]
  }
}
